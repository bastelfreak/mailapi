<p id="notice"><%= notice %></p>

<h1>Listing Aliases</h1>

<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Destination</th>
      <th>Domain</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aliases.each do |alias| %>
      <tr>
        <td><%= alias.source %></td>
        <td><%= alias.destination %></td>
        <td><%= alias.domain_id %></td>
        <td><%= alias.id %></td>
        <td><%= link_to 'Show', alias %></td>
        <td><%= link_to 'Edit', edit_alias_path(alias) %></td>
        <td><%= link_to 'Destroy', alias, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

